# Prosjekt i Robot host 2015
#
# Eksperimentering med GUI og knapper. 

from Tkinter import Tk, Button, W, Entry, Label
from Tkinter import LEFT, RIGHT, TOP, BOTTOM

class HovedMeny():
    # init fungerer som en "contstructor"
    def __init__(self,hovedVindu):
        self.master = hovedVindu
        hovedVindu.title("Prosjekt i Robot")
        hovedVindu.geometry("1900x600")

        # Plassering av knapper, label og entryfelt.
        self.NAOipLabel = Label(hovedVindu, text="NAO IP adresse")
        self.NAOipLabel.config(height = 4, width=20)
        self.NAOipLabel.grid(row=1, column=1, padx=2, pady=10, sticky=W)

        self.NAOipTekst = Entry(hovedVindu)
        self.NAOipTekst.grid(row=1, column=2, padx=2, pady=10, sticky=W)

        self.test1_button = Button(hovedVindu, text="test1", bg = "grey")
        self.test1_button.config(height = 4, width=20)
        self.test1_button.grid(row=2, column=1, padx=2, pady=10, sticky=W)

        self.test2_button = Button(hovedVindu, text="test2", bg = "grey")
        self.test2_button.config(height = 4, width=20)
        self.test2_button.grid(row=3, column=1, padx=2, pady=10, sticky=W)

        self.test3_button = Button(hovedVindu, text="test3", bg = "grey")
        self.test3_button.config(height = 4, width=20)
        self.test3_button.grid(row=4, column=1, padx=2, pady=10, sticky=W)

root = Tk()
HovedMeny(root)
root.mainloop()
